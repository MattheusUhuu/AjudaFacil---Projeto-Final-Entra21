@model AjudaFacilV3.ViewModels.SchoolSupplieDonationViewModel


<body class="donationImg">

<div class="container-fluid">
    <div>
        @*class="logoFundoSchoolDonation"*@
        <div class="row justify-content-center" style="padding-top: 50px; padding-bottom: 10px;">
            <div class="col-md-5" style="background-color: #bdc3f9e3; border-radius: 10px;">
                <h2 class="text-center text-primary">Você tem o poder da mudança <br /> Doe agora <br /> Salve uma Vida.</h2>
                <hr />
                <form class="was-validated" asp-action="CreateSchoolSupplieDonation">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label for="validationTextarea" class="form-label">Descrição</label>
                        <textarea class="form-control" asp-for="Description" id="validationTextarea" placeholder="Descreva um pouco sua doação" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        @*<div asp-validation-for="Description" class="invalid-feedback">Por favor descreva sua doação.</div>*@
                    </div>

                    <div class="mb-3">
                        <label asp-for="Weight" class="control-label"></label>
                        <input asp-for="Weight" class="form-control" required />
                        @*<div class="invalid-feedback">Informe o peso estimado da sua doação.</div>*@
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="validationTextarea" class="form-label">Imagem da doação</label>
                        <input asp-for="Base64Image" type="file" class="form-control" aria-label="file example" required>
                        @*<div class="invalid-feedback">Example invalid form file feedback</div>*@
                        <span asp-validation-for="Base64Image" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-secondary" style="background-color: #c67600;" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="right" data-bs-content="Right popover">
                            JUNTE-SE A NÓS
                        </button>
                        @*<input type="submit" value="Fazer Doação" class="btn btn-primary" />*@
                        <span value="Fazer Doação" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</body>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }   
}
